<h1>Listing comments</h1>

<% if @comment == nil %>
  コメントはまだありません。
<% else %>
  <table>
    <tr>
      <th>User name</th>
      <th>Body</th>
      <th>Idea</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    
    <% @comments.each do |comment| %>
    <tr>
      <td><%= comment.user_name %></td>
      <td><%= simple_format comment.body %></td>
      <td><%= comment.idea.name %></td>
      <td><%= link_to 'Show', comment, class: :btn %></td>
      <td><%= link_to 'Edit', edit_comment_path(comment), class: :btn %></td>
      <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' }, class: :btn %></td>
    </tr>
    <% end %>
  </table>
<% end %>  

