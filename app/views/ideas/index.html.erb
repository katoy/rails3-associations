<h1>Listing ideas</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Picture</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ideas.each do |idea| %>
  <tr>
    <td><%= idea.name %></td>
    <td><%= simple_format idea.description %></td>
    <td><%= idea.picture %></td>
    <td><%= link_to 'Show', idea, class: :btn %></td>
    <td><%= link_to 'Edit', edit_idea_path(idea), class: :btn %></td>
    <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' }, class: :btn %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Idea', new_idea_path, class: :btn %>
