<h1><%= I18n.t(:title_listing_idea, scope: :"views.labels") -%></h1>

<% if @ideas == nil or @ideas.size == 0 %>
  <%= I18n.t(:no_ideas, scope: :"views.labels") -%>
<% else %>
  <table class="table table-striped table-condensed table-hover">
    <tr>
      <th nowrap><%= I18n.t(:name,           scope: :"activerecord.attributes.idea")-%></th>
      <th nowrap><%= I18n.t(:description,    scope: :"activerecord.attributes.idea")-%></th>
      <th nowrap><%= I18n.t(:picture,        scope: :"activerecord.attributes.idea")-%></th>
      <th nowrap><%= I18n.t(:comments_count, scope: :"activerecord.attributes.idea")-%></th>
      <th></th>
    </tr>
    
    <% @ideas.each do |idea| %>
    <tr>
      <td><%= idea.name -%></td>
      <td><%= hbr idea.description -%></td>
      <td>  <%= image_tag(idea.picture_url, width: 80) if idea.picture.present? %></td>
      <td><%= idea.comments_count -%></td>
      <td nowrap>
	<%= link_to I18n.t(:show,    scope: :"views.buttons"), idea, class: :btn -%>
        <%= link_to I18n.t(:edit,    scope: :"views.buttons"), edit_idea_path(idea), class: :btn -%>
        <%= link_to I18n.t(:destroy, scope: :"views.buttons"), idea, method: :delete, data: { confirm: '削除しますか?' }, class: :btn -%>
      </td>
    </tr>
    <% end %>
  </table>
<% end %>
<br />

<%= link_to I18n.t(:new_idea, scope: :"views.buttons"), new_idea_path, class: :btn %>
